<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:mi="using:Material.Icons.Avalonia"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="500"
             x:Class="Avalonia.FFmpegVideoPlayer.VideoPlayerControl">
    
    <UserControl.Styles>
        <!-- Button style for media controls - custom template to remove overlay -->
        <Style Selector="Button.mediaButton">
            <Setter Property="Background" Value="#e8e8e8"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="BorderBrush" Value="#999999"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Template">
                <ControlTemplate>
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{TemplateBinding CornerRadius}"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter Content="{TemplateBinding Content}"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter>
        </Style>
        <Style Selector="Button.mediaButton:pointerover">
            <Setter Property="Background" Value="#d0d0d0"/>
            <Setter Property="BorderBrush" Value="#666666"/>
        </Style>
        <Style Selector="Button.mediaButton:pressed">
            <Setter Property="Background" Value="#c0c0c0"/>
        </Style>
    </UserControl.Styles>
    
    <Grid RowDefinitions="*,Auto">
        <!-- Video View - Using Image control for FFmpeg decoded frames -->
        <Border Grid.Row="0" Background="Black">
            <Image Name="VideoImage" Stretch="Uniform" />
        </Border>
        
        <!-- Controls Panel -->
        <Border Name="ControlPanelBorder" Grid.Row="1" Background="White" Padding="10">
            <Grid RowDefinitions="Auto,Auto">
                <!-- Seek Bar -->
                <Grid Grid.Row="0" ColumnDefinitions="Auto,*,Auto" Margin="0,0,0,8">
                    <TextBlock Name="CurrentTimeText" Grid.Column="0" 
                               Text="00:00" Foreground="#333333" 
                               VerticalAlignment="Center" Margin="0,0,10,0" FontSize="12"/>
                    <Slider Name="SeekBar" Grid.Column="1" 
                            Minimum="0" Maximum="100" Value="0"
                            VerticalAlignment="Center"/>
                    <TextBlock Name="TotalTimeText" Grid.Column="2" 
                               Text="00:00" Foreground="#333333" 
                               VerticalAlignment="Center" Margin="10,0,0,0" FontSize="12"/>
                </Grid>
                
                <!-- Playback Controls -->
                <Grid Grid.Row="1" ColumnDefinitions="Auto,Auto,Auto,*,Auto,Auto">
                    <!-- Open File Button -->
                    <Button Name="OpenButton" Grid.Column="0" Margin="0,0,5,0"
                            Classes="mediaButton" Click="OnOpenClick">
                        <StackPanel Orientation="Horizontal" Spacing="5">
                            <mi:MaterialIcon Kind="FolderOpen" Width="20" Height="20" Foreground="#333333"/>
                            <TextBlock Text="Open" VerticalAlignment="Center" Foreground="#333333"/>
                        </StackPanel>
                    </Button>
                    
                    <!-- Play/Pause Button -->
                    <Button Name="PlayPauseButton" Grid.Column="1" Width="90" Margin="0,0,5,0"
                            Classes="mediaButton" Click="OnPlayPauseClick">
                        <StackPanel Orientation="Horizontal" Spacing="5">
                            <mi:MaterialIcon Name="PlayPauseIcon" Kind="Play" Width="20" Height="20" Foreground="#333333"/>
                            <TextBlock Name="PlayPauseText" Text="Play" VerticalAlignment="Center" Foreground="#333333"/>
                        </StackPanel>
                    </Button>
                    
                    <!-- Stop Button -->
                    <Button Name="StopButton" Grid.Column="2" Margin="0,0,5,0"
                            Classes="mediaButton" Click="OnStopClick">
                        <StackPanel Orientation="Horizontal" Spacing="5">
                            <mi:MaterialIcon Kind="Stop" Width="20" Height="20" Foreground="#333333"/>
                            <TextBlock Text="Stop" VerticalAlignment="Center" Foreground="#333333"/>
                        </StackPanel>
                    </Button>
                    
                    <!-- Spacer -->
                    <Panel Grid.Column="3"/>
                    
                    <!-- Volume Icon (clickable to toggle mute) -->
                    <Button Name="VolumeButton" Grid.Column="4" Padding="4" Margin="0,0,5,0"
                            Background="Transparent" BorderThickness="0" Click="OnMuteClick"
                            VerticalAlignment="Center" Cursor="Hand">
                        <mi:MaterialIcon Name="VolumeIcon" Kind="VolumeHigh" Width="20" Height="20" Foreground="#333333"/>
                    </Button>
                    <Slider Name="VolumeSlider" Grid.Column="5" 
                            Width="100" Minimum="0" Maximum="100" Value="100"
                            VerticalAlignment="Center"/>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
