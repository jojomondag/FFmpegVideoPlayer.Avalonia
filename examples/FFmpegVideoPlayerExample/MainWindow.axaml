<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ffmpeg="clr-namespace:Avalonia.FFmpegVideoPlayer;assembly=Avalonia.FFmpegVideoPlayer"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
        x:Class="FFmpegVideoPlayerExample.MainWindow"
        Title="FFmpeg Video Player Example" 
        Width="900" Height="700"
        MinWidth="640" MinHeight="480">

    <Window.Resources>
        <DrawingBrush x:Key="CheckerboardBrush" TileMode="Tile" SourceRect="0,0,40,40" DestinationRect="0,0,40,40">
            <DrawingBrush.Drawing>
                <DrawingGroup>
                    <GeometryDrawing Brush="#2a2a4e">
                        <GeometryDrawing.Geometry>
                            <RectangleGeometry Rect="0,0,40,40" />
                        </GeometryDrawing.Geometry>
                    </GeometryDrawing>
                    <GeometryDrawing Brush="#3a3a5e">
                        <GeometryDrawing.Geometry>
                            <GeometryGroup>
                                <RectangleGeometry Rect="0,0,20,20" />
                                <RectangleGeometry Rect="20,20,20,20" />
                            </GeometryGroup>
                        </GeometryDrawing.Geometry>
                    </GeometryDrawing>
                </DrawingGroup>
            </DrawingBrush.Drawing>
        </DrawingBrush>
    </Window.Resources>
    
    <Grid RowDefinitions="Auto,*,Auto">
        <!-- Header -->
        <Border Grid.Row="0" Background="#2d2d2d" Padding="15">
            <StackPanel Orientation="Horizontal" Spacing="20" HorizontalAlignment="Center">
                <CheckBox x:Name="ShowControlsCheckBox" 
                          Content="Show Controls" 
                          IsChecked="True" 
                          Foreground="White"
                          VerticalAlignment="Center"/>
                <CheckBox x:Name="TransparentBgCheckBox" 
                          Content="Transparent Background" 
                          IsChecked="False" 
                          Foreground="White"
                          VerticalAlignment="Center"/>
                <ComboBox x:Name="StretchModeComboBox" 
                          SelectedIndex="2"
                          Width="120"
                          VerticalAlignment="Center">
                    <ComboBoxItem>None</ComboBoxItem>
                    <ComboBoxItem>Fill</ComboBoxItem>
                    <ComboBoxItem>Uniform</ComboBoxItem>
                    <ComboBoxItem>UniformToFill</ComboBoxItem>
                </ComboBox>
                <Button x:Name="ShortcutsButton"
                        Content="Shortcuts"
                        Click="OnShortcutsClick"
                        VerticalAlignment="Center"/>
            </StackPanel>
        </Border>
        
        <!-- Video Player Control -->
        <Border Grid.Row="1" Background="#1a1a2e" Margin="10" Padding="20" BorderBrush="#444466" BorderThickness="2" CornerRadius="8">
            <Grid>
                <!-- Background grid pattern to show transparency/stretch effects -->
                <Panel Background="{StaticResource CheckerboardBrush}" ClipToBounds="True" />
                <ffmpeg:VideoPlayerControl x:Name="VideoPlayer" 
                                           ShowControls="True"
                                           VideoBackground="#80000000"/>
            </Grid>
        </Border>
    </Grid>
</Window>
