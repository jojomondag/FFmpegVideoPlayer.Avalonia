<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ffmpeg="clr-namespace:Avalonia.FFmpegVideoPlayer;assembly=Avalonia.FFmpegVideoPlayer"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
        x:Class="FFmpegVideoPlayerExample.MainWindow"
        Title="FFmpeg Video Player Example" 
        Width="900" Height="700"
        MinWidth="640" MinHeight="480">
    
    <Grid RowDefinitions="Auto,*,Auto">
        <!-- Header -->
        <Border Grid.Row="0" Background="#2d2d2d" Padding="15">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="20">
                <TextBlock Text="FFmpegVideoPlayer.Avalonia Example" 
                           FontSize="18" 
                           FontWeight="SemiBold"
                           Foreground="White"
                           VerticalAlignment="Center"/>
                <CheckBox x:Name="ShowControlsCheckBox" 
                          Content="Show Controls" 
                          IsChecked="True" 
                          Foreground="White"
                          VerticalAlignment="Center"/>
                <CheckBox x:Name="TransparentBgCheckBox" 
                          Content="Transparent Background" 
                          IsChecked="False" 
                          Foreground="White"
                          VerticalAlignment="Center"/>
            </StackPanel>
        </Border>
        
        <!-- Video Player Control -->
        <Border Grid.Row="1" Background="#1a1a2e" Margin="10">
            <ffmpeg:VideoPlayerControl x:Name="VideoPlayer" 
                                       ShowControls="True"
                                       VideoBackground="Black"/>
        </Border>
    </Grid>
</Window>
